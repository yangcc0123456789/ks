/* pages/scroll/scroll.wxss */
scroll-view{
  width: 100%;
  height: 300rpx;
  white-space: nowrap;
}
.scroll-view-y{
  text-align: center;
  height: 300rpx;
  line-height: 300rpx;
  font-size: 30pt;
  background-color: lightsalmon;
  border: 1rpx solid silver;
}
.scroll-view-x{
  text-align: center;
  width: 100%;
  height: 300rpx;
  line-height: 300rpx;
  font-size: 30pt;
  background-color: lightgreen;
  display: inline-block;
  border: 1rpx solid silver;
}